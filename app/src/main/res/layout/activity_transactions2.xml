<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Transactions">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chart | Transactions | Home"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingBottom="16dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_check_availability"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Is book available?"
            android:padding="16dp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Issue Book"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editText_book_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Book Name"
            android:inputType="text" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_issue_book"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Issue book?"
            android:padding="16dp"
            android:layout_marginBottom="16dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Return Book"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editText_author_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Author Name"
            android:inputType="text" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_return_book"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Return book?"
            android:padding="16dp"
            android:layout_marginBottom="16dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pay Fine"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editText_serial_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Serial No"
            android:inputType="text" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Issue Date"
            android:textSize="16sp" />

        <DatePicker
            android:id="@+id/datePicker_issue_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Return Date"
            android:textSize="16sp" />

        <DatePicker
            android:id="@+id/datePicker_return_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Actual Return Date"
            android:textSize="16sp" />

        <DatePicker
            android:id="@+id/datePicker_actual_return_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/editText_fine_calculated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fine Calculated"
            android:text="0"
            android:inputType="number" />

        <CheckBox
            android:id="@+id/checkbox_fine_paid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fine Paid"
            android:checked="false" />

        <EditText
            android:id="@+id/editText_remarks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Remarks (Optional)"
            android:inputType="textMultiLine" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_log_out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Log Out"
            android:padding="16dp"
            android:layout_marginTop="16dp" />

    </LinearLayout>


</ScrollView>