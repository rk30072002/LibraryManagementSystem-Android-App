<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IssueBookTransaction">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textView_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chart | Transactions | Home"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingBottom="16dp" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_check_availability"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Is book available?"
            android:padding="16dp"
            android:layout_marginBottom="16dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Issue Book"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinner_book_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_issue_book"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Issue book?"
            android:padding="16dp"
            android:layout_marginBottom="16dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Return Book"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinner_author_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_return_book"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Return book?"
            android:padding="16dp"
            android:layout_marginBottom="16dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pay Fine"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editText_fine_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fine Amount"
            android:inputType="number" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_pay_fine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pay Fine"
            android:padding="16dp"
            android:layout_marginBottom="16dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_log_out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Log Out"
            android:padding="16dp"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView>